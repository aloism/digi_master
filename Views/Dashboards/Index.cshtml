@{
  ViewData["Title"] = "Dashboard - Analytics";
}
@section VendorStyles {
<link rel="stylesheet" href="~/vendor/libs/apex-charts/apex-charts.css" />
}
@section VendorScripts {
<script src="~/vendor/libs/apex-charts/apexcharts.js"></script>
}
@section PageScripts {
<script src="~/js/dashboards-analytics.js"></script>
}

@* ************** Content ************** *@
<div class="row">
  <div class="col-xxl-8 mb-6 order-0">
    <div class="card">
      <div class="d-flex align-items-start row">
        <div class="col-sm-7">
          <div class="card-body">
            <h5 class="card-title text-primary mb-3">Congratulations John! ðŸŽ‰</h5>
            <p class="mb-6">You have done 72% more sales today.<br>Check your new badge in your profile.</p>

            @* <a href="javascript:;" class="btn btn-sm btn-label-primary">View Badges</a> *@

            @* Shortcut buttons: Add Business, Add Account *@
            <div class="mt-3">
              <a asp-controller="Businesses" asp-action="Add" class="btn btn-sm btn-primary me-2">
                <i class="bx bx-building me-1"></i> Add Business
              </a>
              <a asp-controller="Accounts" asp-action="Add" class="btn btn-sm btn-outline-primary">
                <i class="bx bx-user-plus me-1"></i> Add Account
              </a>
            </div>

          </div>
        </div>
        <div class="col-sm-5 text-center text-sm-left">
          <div class="card-body pb-0 px-0 px-md-6">
            <img src="~/img/illustrations/man-with-laptop.png" height="175" class="scaleX-n1-rtl" alt="View Badge User">
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xxl-4 col-lg-12 col-md-4 order-1">
    <div class="row">
      <div class="col-lg-6 col-md-12 col-6 mb-6">
        <div class="card h-100">
          <div class="card-body pb-4">
            <span class="d-block fw-medium mb-1">Cash In Hand</span>
            <h4 class="card-title mb-0">276k</h4>
          </div>
          <div id="orderChart" class="pb-3"></div>
        </div>
      </div>
      <div class="col-lg-6 col-md-12 col-6 mb-6">
        <div class="card h-100">
          <div class="card-body">
            <div class="card-title d-flex align-items-start justify-content-between mb-4">
              <div class="avatar flex-shrink-0">
                <img src="~/img/icons/unicons/wallet-info.png" alt="wallet info" class="rounded">
              </div>
              <div class="dropdown">
                <button class="btn p-0" type="button" id="cardOpt6" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <i class="bx bx-dots-vertical-rounded text-muted"></i>
                </button>
                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt6">
                  <a class="dropdown-item" href="javascript:void(0);">View More</a>
                  <a class="dropdown-item" href="javascript:void(0);">Delete</a>
                </div>
              </div>
            </div>
            <p class="mb-1">Cash In (Today)</p>
            <h4 class="card-title mb-3">$4,679</h4>
            <small class="text-success fw-medium"><i class='bx bx-up-arrow-alt'></i> +28.42%</small>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
